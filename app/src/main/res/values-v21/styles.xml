<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/stxnext_green</item>
        <item name="android:colorAccent">@color/stxnext_green</item>
        <item name="android:colorPrimaryDark">@color/stxnext_green_dark</item>
        <item name="android:navigationBarColor">@color/stxnext_green_dark</item>
        <item name="android:buttonStyle">@style/Button.Material</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/stxnext_green</item>
        <item name="android:colorAccent">@color/stxnext_green</item>
        <item name="android:colorPrimaryDark">@color/stxnext_green_dark</item>
        <item name="android:navigationBarColor">@color/stxnext_green_dark</item>
        <item name="android:buttonStyle">@style/Button.Material</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogTheme">@android:style/Theme.Material.Light.Dialog</item>
    </style>

    <style name="Button.Material" parent="Button">
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/selector_default_button</item>
    </style>

</resources>
