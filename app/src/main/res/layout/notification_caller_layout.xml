<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@android:color/transparent"
              android:padding="15dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/caller_layout_image_name_combined_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caller_layout_background"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <ImageView
            android:id="@+id/notification_caller_layout_profile_iv"
            android:layout_width="@dimen/notif_caller_profile_pict_size"
            android:layout_height="@dimen/notif_caller_profile_pict_size"
            android:layout_marginRight="15dp"
            android:src="@drawable/avatar_placeholder"/>

        <TextView
            android:id="@+id/notification_caller_layout_caller_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/stxnext_green_dark"
            android:textStyle="bold|italic"
            android:maxLines="2"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:id="@+id/caller_layout_close_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_clear_black_48dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>